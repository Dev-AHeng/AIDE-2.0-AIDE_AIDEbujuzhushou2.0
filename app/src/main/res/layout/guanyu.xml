<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<android.support.v7.widget.Toolbar
		android:theme="@style/toolBar"
		android:id="@+id/my_toolbar"
		android:layout_width="match_parent"
		android:layout_height="?attr/actionBarSize"
		android:background="#3F51B5"
		android:elevation="4dp"/>

	<android.support.v7.widget.CardView
		android:foreground="?android:attr/selectableItemBackgroundBorderless"
		android:clickable="true"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/mainCardView1"
		android:background="@drawable/yuanjiao"
		android:layout_marginTop="8dp"
		android:layout_marginRight="8dp"
		android:layout_marginLeft="8dp">

		<LinearLayout
			android:layout_height="match_parent"
			android:layout_width="match_parent"
			android:orientation="vertical"
			android:gravity="center"
			android:background="#FFFFFF">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:text="AIDE"
				android:textSize="100sp"
				android:id="@+id/guanyuTextView1"
				android:layout_marginTop="-5dp"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Version1.0  Beta5"
				android:id="@+id/guanyuTextView3"
				android:layout_marginTop="-18dp"
				android:layout_marginBottom="5dp"/>

		</LinearLayout>

	</android.support.v7.widget.CardView>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="vertical"
		android:background="@drawable/yuanjiao2"
		android:elevation="2dp"
		android:layout_margin="10dp">

		<LinearLayout
			android:clickable="true"
			android:background="?android:attr/selectableItemBackground"
			android:layout_height="52dp"
			android:layout_width="match_parent"
			android:gravity="center_vertical"
			android:padding="10dp"
			android:onClick="zhuozhe">

			<ImageView
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:src="@drawable/zuoze"
				android:layout_margin="3dp"/>

			<TextView
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="xiaoheng"
				android:layout_marginLeft="5dp"
				android:id="@+id/guanyuTextView2"
				android:layout_marginTop="-3dp"/>

		</LinearLayout>

		<LinearLayout
			android:clickable="true"
			android:layout_height="52dp"
			android:layout_width="match_parent"
			android:gravity="center_vertical"
			android:background="?android:attr/selectableItemBackground"
			android:padding="10dp"
			android:onClick="lianxizhuozhe">

			<ImageView
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:src="@drawable/jiahaoyou"
				android:layout_margin="3dp"/>

			<TextView
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="联系作者"
				android:textSize="15sp"
				android:layout_marginLeft="5dp"/>

		</LinearLayout>

		<LinearLayout
			android:clickable="true"
			android:background="?android:attr/selectableItemBackground"
			android:layout_height="52dp"
			android:layout_width="match_parent"
			android:gravity="center_vertical"
			android:padding="10dp"
			android:onClick="jiaqun">

			<ImageView
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:src="@drawable/jiaqun"
				android:layout_margin="3dp"/>

			<TextView
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="加入群聊"
				android:textSize="15sp"
				android:layout_marginLeft="5dp"/>

		</LinearLayout>

		<LinearLayout
			android:clickable="true"
			android:layout_height="52dp"
			android:layout_width="match_parent"
			android:gravity="center_vertical"
			android:background="?android:attr/selectableItemBackground"
			android:padding="10dp"
			android:onClick="jianchegengxin">

			<ImageView
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:src="@drawable/gengxin"
				android:layout_margin="3dp"/>

			<TextView
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="检测更新"
				android:textSize="15sp"
				android:layout_marginLeft="5dp"/>

		</LinearLayout>

		<LinearLayout
			android:clickable="true"
			android:layout_height="52dp"
			android:layout_width="match_parent"
			android:gravity="center_vertical"
			android:background="?android:attr/selectableItemBackground"
			android:padding="10dp"
			android:onClick="jiesao">

			<ImageView
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:src="@drawable/jieshao"
				android:layout_margin="3dp"/>

			<TextView
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="软件介绍"
				android:textSize="15sp"
				android:layout_marginLeft="5dp"/>

		</LinearLayout>

	</LinearLayout>

	<LinearLayout
		android:layout_height="fill_parent"
		android:layout_width="match_parent"
		android:orientation="vertical"
		android:gravity="bottom">

		<RelativeLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:paddingBottom="3dp">

			<TextView
				android:layout_height="wrap_content"
				android:layout_width="15dp"
				android:text="|"
				android:layout_centerInParent="true"
				android:id="@+id/mainTextView1"
				android:gravity="center"
				android:textColor="#DADADA"/>

			<TextView
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="源码开源"
				android:layout_toRightOf="@id/mainTextView1"
				android:id="@+id/text2"
				android:textColor="#03A9F4"
				android:layout_marginTop="4dp"
				android:onClick="kaiyuan"/>

			<TextView
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="远程管理"
				android:layout_toLeftOf="@id/mainTextView1"
				android:id="@+id/text1"
				android:layout_marginTop="4dp"
				android:textColor="#03A9F4"
				android:onClick="guanli"/>

		</RelativeLayout>

		<TextView
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:text="Copyright © 2018 小亨. All rights reserved."
			android:gravity="center"
			android:textSize="10sp"
			android:textColor="#9E9E9E"
			android:paddingBottom="4dp"/>

	</LinearLayout>

</LinearLayout>

